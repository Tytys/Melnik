        xmlns:local="clr-namespace:Melnik"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="button" Content="Выбрать файл&#xD;&#xA;" HorizontalAlignment="Left" Margin="330,182,0,0" VerticalAlignment="Top" Height="112" Width="182" Click="button_Click" Background="#FFA20000" FontSize="22" FontWeight="Bold"/>
        <Button x:Name="button1" Content="шифрация инверсия" HorizontalAlignment="Left" Margin="549,322,0,0" VerticalAlignment="Top" Height="112" Width="251" Click="button1_Click" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="button3" Content="шифрация тетрады" HorizontalAlignment="Left" Margin="276,322,0,0" VerticalAlignment="Top" Height="112" Width="268" Click="button3_Click" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="button5" Content="шифрация &#xD;&#xA;перестановка" HorizontalAlignment="Left" Margin="0,322,0,0" VerticalAlignment="Top" Height="112" Width="271" Click="button5_Click" FontSize="24" FontWeight="Bold"/>
